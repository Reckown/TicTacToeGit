<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuIA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A267AC"
            android:padding="5sp"
            android:text="Mode de jeu"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="113dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="Quel mode de jeu ?"
            android:textAlignment="center"
            android:textColor="#A267AC"
            android:textSize="35sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="97dp" />

        <Button
            android:id="@+id/facileButton"
            android:layout_width="250sp"
            android:layout_height="60sp"
            android:layout_gravity="center"
            android:layout_marginBottom="5sp"
            android:backgroundTint="#CE7BB0"
            android:onClick="lunchGame"
            android:text="Facile" />

        <Button
            android:id="@+id/normalButton"
            android:layout_width="250sp"
            android:layout_height="60sp"
            android:layout_gravity="center"
            android:layout_marginBottom="5sp"
            android:backgroundTint="#CE7BB0"
            android:onClick="lunchGame"
            android:text="Normal" />

        <Button
            android:id="@+id/difficileButton"
            android:layout_width="250sp"
            android:layout_height="60sp"
            android:layout_gravity="center"
            android:layout_marginBottom="5sp"
            android:backgroundTint="#CE7BB0"
            android:onClick="lunchGame"
            android:text="Difficile" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="250sp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:layout_marginBottom="50sp" />

        <Button
            android:id="@+id/buttonRetour"
            android:layout_width="250sp"
            android:layout_height="60sp"
            android:layout_gravity="center"
            android:backgroundTint="#CE7BB0"
            android:onClick="retour"
            android:text="Retourner au menu" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>